  db$insert("users", list(id = 3, name = "alice"))

# Case-sensitive search
  db$search("users", "name", "Alice", ignore.case = FALSE)

# Case-insensitive search
  db$search("users", "name", "alice", ignore.case = TRUE)
}

}
